# Test Environment Configuration
# Copy this file to .env.test and fill in your values

# ===================================
# PI Web API Connection
# ===================================

# Base URL of PI Web API (without trailing slash)
TEST_PIWEBAPI_URL=https://piwebapi-dev.company.com/piwebapi

# Authentication type: ntlm, kerberos, or basic
TEST_PIWEBAPI_AUTH_TYPE=ntlm

# Windows domain (required for NTLM)
TEST_PIWEBAPI_DOMAIN=COMPANY

# Username (without domain prefix)
TEST_PIWEBAPI_USERNAME=your_username

# Password
TEST_PIWEBAPI_PASSWORD=your_password

# ===================================
# AF Test Environment
# ===================================

# AF Server name (for path resolution)
TEST_AF_SERVER=AFSERVER-DEV

# AF Database name dedicated for testing
TEST_AF_DATABASE=DSM_TEST_DB

# OPTION 1 (Recommended): WebId of test root element
# This is the fastest and most reliable method
# Example: F1AbCDeFgHiJkLmNoPqRsTuVwXyZ1234567890ABC
TEST_AF_ROOT_WEBID=

# OPTION 2 (Fallback): Path to test root element
# Used if WebId is not available
# Format: \ELEMENT_NAME
TEST_AF_ROOT_PATH=\DSM_TEST_ROOT

# ===================================
# Test Isolation Settings
# ===================================

# Add timestamp prefix to test element names (recommended)
# Creates names like: TEST_T1KJH8A_DF_MYFRAME
TEST_USE_TIMESTAMP=true

# Add random suffix to test element names (recommended)
# Creates names like: TEST_DF_MYFRAME_X7B2
TEST_USE_RANDOM=true

# Automatically cleanup test elements after tests
TEST_CLEANUP=true

# Remove test elements older than X hours (0 to disable)
# Helps cleanup orphaned elements from failed test runs
TEST_CLEANUP_HOURS=24

# ===================================
# Proxy Settings
# ===================================

# Port for local test proxy server
TEST_PROXY_PORT=3001

# Log all proxy requests (useful for debugging)
TEST_PROXY_LOG=true
